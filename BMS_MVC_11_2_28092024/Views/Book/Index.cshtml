@model IEnumerable<BMS_MVC.DataAccess.Entity.BookEntity>

<style>
    .img-book{
        width : 100px;
        height : 100px;
        border-radius : 50%;
    }
</style>
<div class="row">
    <div class="col-md-6 offset-3">
        <table class="table">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src='@Url.Content(item.CoverPhotoPath)' class="img-book" />
                            </td>
                            <td>@item.Title</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-danger">
                            There is no record!
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>